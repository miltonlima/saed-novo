@model MvcMovie.Models.Pessoa

@{
    ViewData["Title"] = "Excluir Pessoa";
}

<h1>Excluir Pessoa</h1>

<h3>Tem certeza que deseja excluir esta pessoa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>