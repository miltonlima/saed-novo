@{
    ViewData["Title"] = "Bem-vindos ao SAED";
}

<div class="welcome-container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-4 text-primary mb-4">🎓 Bem-vindos ao SAED! 🎓</h1>
            
            <div class="card shadow-lg mb-4">
                <div class="card-body p-5">
                    <h3 class="card-title text-success mb-3">Sistema de Apoio Educacional</h3>
                                        
                    @if (ViewData["Message"] != null)
                    {
                        <div class="alert alert-success mt-4" role="alert">
                            <h5>👋 Olá!</h5>
                            @for (int i = 0; i < (int)ViewData["NumTimes"]!; i++)
                            {
                                <p class="mb-1">@ViewData["Message"]</p>
                            }
                        </div>
                    }
                    
                    <div class="mt-4">
                        <p class="text-muted">
                            <em>"A educação é a arma mais poderosa que você pode usar para mudar o mundo." - Nelson Mandela</em>
                        </p>
                    </div>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-3">
                            <i class="fas fa-home"></i> Ir para o Início
                        </a>
                        <a href="@Url.Action("Index", "Pessoas")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-users"></i> Ver Pessoas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.welcome-container {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 80vh;
}

.welcome-section {
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 20px;
}

.card {
    border: none;
    background: rgba(255, 255, 255, 0.95);
}

.display-4 {
    font-weight: 300;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
}

.btn-lg {
    padding: 12px 30px;
    border-radius: 25px;
    font-weight: 500;
}

.list-unstyled li {
    padding: 5px 0;
    font-size: 0.9rem;
}
</style>