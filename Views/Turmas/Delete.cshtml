@model MvcMovie.Models.Turma
@{
    ViewData["Title"] = "Excluir Turma";
}
<h1>Excluir Turma</h1>
<h3>Tem certeza que deseja excluir esta turma?</h3>
<hr />
<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataInicio)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataInicio)</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataFim)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataFim)</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataCriacao)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCriacao)</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
